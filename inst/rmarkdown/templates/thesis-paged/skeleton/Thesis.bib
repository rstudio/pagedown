  pages = {641-652},
  file = {/home/thornux/Zotero/storage/N6A9G9M5/Sch√§del et al. - 2014 - Circumpolar assessment of permafrost C quality and.pdf;/home/thornux/Zotero/storage/8RCSUATK/abstract.html}
